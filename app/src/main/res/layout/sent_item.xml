<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20sp"
    app:cardElevation="8sp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/vanilla"
    android:backgroundTint="@null">

    <LinearLayout
        android:id="@+id/cardView_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20sp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/cardView_mainBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/usernameTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:padding="16sp"
                android:text="Invited User"
                android:textSize="16sp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/cardView_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:padding="16sp"
                android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cardView_expandable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16sp"
                android:text="Location:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/locationTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/location"
                android:padding="16sp"
                android:text="Restaurant"
                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/location"
                android:padding="16sp"
                android:text="Date:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dateTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/location"
                android:layout_toEndOf="@id/date"
                android:padding="16sp"
                android:text="Date"
                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/startTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/date"
                android:padding="16sp"
                android:text="Start Time:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/startTimeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/date"
                android:layout_toEndOf="@id/startTime"
                android:padding="16sp"
                android:text="Time"
                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/endTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End Time:"
                android:textStyle="bold"
                android:textSize="16sp"
                android:padding="16sp"
                android:layout_below="@id/startTime"/>

            <TextView
                android:id="@+id/endTimeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textStyle="normal"
                android:textSize="16sp"
                android:padding="16sp"
                android:layout_toEndOf="@id/endTime"
                android:layout_below="@id/startTime"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/endTimeTxt"
                android:gravity="center"
                android:layout_marginBottom="16sp">

                <TextView
                    android:id="@+id/statusTxt"
                    android:layout_width="1sp"
                    android:layout_height="wrap_content"
                    android:padding="8sp"
                    android:text="Status"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginStart="16sp"
                    android:layout_marginEnd="16sp"/>

                <Button
                    android:id="@+id/cancelBtn"
                    android:layout_width="1sp"
                    android:layout_height="wrap_content"
                    android:padding="8sp"
                    android:text="Cancel Invitation"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:backgroundTint="#FF0000"
                    android:layout_weight="1"
                    android:layout_marginStart="16sp"
                    android:layout_marginEnd="16sp"/>

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>