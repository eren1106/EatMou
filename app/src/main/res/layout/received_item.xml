<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20sp"
    app:cardElevation="8sp"
    app:cardUseCompatPadding="true"
    android:backgroundTint="@color/vanilla">

    <LinearLayout
        android:id="@+id/cardView_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/cardView_mainBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

<!--            <TextView-->
<!--                android:id="@+id/username"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="User:"-->
<!--                android:textStyle="bold"-->
<!--                android:textSize="16sp"-->
<!--                android:padding="16sp"-->
<!--                android:layout_alignParentStart="true"/>-->

            <TextView
                android:id="@+id/usernameTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Organiser Name"
                android:textStyle="normal"
                android:textSize="16sp"
                android:padding="16sp"
                android:layout_alignParentStart="true"/>

            <ImageView
                android:id="@+id/cardView_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                android:padding="16sp"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cardView_expandable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location:"
                android:textStyle="bold"
                android:textSize="16sp"
                android:padding="16sp"/>

            <TextView
                android:id="@+id/locationTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Restaurant"
                android:textStyle="normal"
                android:textSize="16sp"
                android:padding="16sp"
                android:layout_toEndOf="@id/location" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date:"
                android:textStyle="bold"
                android:textSize="16sp"
                android:padding="16sp"
                android:layout_below="@id/location"/>

            <TextView
                android:id="@+id/dateTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textStyle="normal"
                android:textSize="16sp"
                android:padding="16sp"
                android:layout_toEndOf="@id/date"
                android:layout_below="@id/location"/>

            <TextView
                android:id="@+id/startTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Time:"
                android:textStyle="bold"
                android:textSize="16sp"
                android:padding="16sp"
                android:layout_below="@id/date"/>

            <TextView
                android:id="@+id/startTimeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textStyle="normal"
                android:textSize="16sp"
                android:padding="16sp"
                android:layout_toEndOf="@id/startTime"
                android:layout_below="@id/date"/>

            <TextView
                android:id="@+id/endTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End Time:"
                android:textStyle="bold"
                android:textSize="16sp"
                android:padding="16sp"
                android:layout_below="@id/startTime"/>

            <TextView
                android:id="@+id/endTimeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:textStyle="normal"
                android:textSize="16sp"
                android:padding="16sp"
                android:layout_toEndOf="@id/endTime"
                android:layout_below="@id/startTime"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/endTime"
                android:gravity="center">

                <Button
                    android:id="@+id/declineBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Decline"
                    android:backgroundTint="#FF0000"
                    android:layout_margin="8sp"/>

                <Button
                    android:id="@+id/acceptBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accept"
                    android:backgroundTint="#00FF00"
                    android:textColor="@color/black"
                    android:layout_margin="8sp"/>

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>